---
export interface Props {
  brandName?: string;
}

const { brandName = "Papa Ricco's" } = Astro.props;

const footerSections = {
  contact: {
    title: "Contact",
    items: [
      "14415 S. Dixie Highway",
      "Miami, FL 33178",
      "(305) 253-6511"
    ]
  },
  hours: {
    title: "Hours", 
    items: [
      "Mon: Closed",
      "Tue-Thu: 3pm - 9:30pm",
      "Fri-Sat: 12pm - 10pm",
      "Sun: 1pm - 9:30pm"
    ]
  },
  navigation: {
    title: "Navigate",
    items: [
      { name: "Menu", href: "/menu" },
      { name: "About", href: "/about" },
      { name: "Contact", href: "/contact" },
      { name: "Order Online", href: "/reservations" }
    ]
  }
};

const socialLinks = [
  { name: "Instagram", href: "#", icon: "instagram" },
  { name: "Facebook", href: "#", icon: "facebook" },
  { name: "Yelp", href: "#", icon: "yelp" }
];
---

<footer class="bg-primary-color border-t border-white/10">
  <div class="max-w-6xl mx-auto px-6 md:px-12">
    
    <!-- Main Footer Content -->
    <div class="py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">
        
        <!-- Brand Section -->
        <div class="lg:col-span-1">
          <h3 class="brand-text text-2xl md:text-3xl font-bold tracking-wider mb-6">
            {brandName}
          </h3>
          <p class="hero-description text-sm leading-relaxed mb-6">
            Serving Miami the authentic taste of Italy since 1975. More than just a pizzeria, we're a family tradition.
          </p>
          
          <!-- Social Media -->
          <div class="flex space-x-4">
            {socialLinks.map((social) => (
              <a
                href={social.href}
                class="w-10 h-10 bg-white/10 hover:bg-accent flex items-center justify-center rounded-full transition-all duration-300 hover:scale-110"
                aria-label={social.name}
              >
                <span class="hero-title text-sm font-medium">
                  {social.icon === 'instagram' && 'IG'}
                  {social.icon === 'facebook' && 'FB'}
                  {social.icon === 'yelp' && 'YP'}
                </span>
              </a>
            ))}
          </div>
        </div>

        <!-- Contact Info -->
        <div>
          <h4 class="hero-subtitle text-lg font-medium tracking-wide mb-6">
            {footerSections.contact.title}
          </h4>
          <div class="space-y-3">
            {footerSections.contact.items.map((item) => (
              <p class="hero-description text-sm leading-relaxed">
                {item}
              </p>
            ))}
          </div>
        </div>

        <!-- Hours -->
        <div>
          <h4 class="hero-subtitle text-lg font-medium tracking-wide mb-6">
            {footerSections.hours.title}
          </h4>
          <div class="space-y-3">
            {footerSections.hours.items.map((item) => (
              <p class="hero-description text-sm leading-relaxed">
                {item}
              </p>
            ))}
          </div>
        </div>

        <!-- Navigation -->
        <div>
          <h4 class="hero-subtitle text-lg font-medium tracking-wide mb-6">
            {footerSections.navigation.title}
          </h4>
          <div class="space-y-3">
            {footerSections.navigation.items.map((item) => (
              <a
                href={item.href}
                class="block hero-description text-sm leading-relaxed hover:text-accent transition-colors duration-300"
              >
                {item.name}
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10 py-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="hero-description text-sm">
          Â© 2024 {brandName}. All rights reserved.
        </p>
        <div class="flex space-x-8">
          <a href="#" class="hero-description text-sm hover:text-accent transition-colors duration-300">
            Privacy Policy
          </a>
          <a href="#" class="hero-description text-sm hover:text-accent transition-colors duration-300">
            Terms of Service
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .bg-accent {
    background-color: var(--accent-color);
  }
  
  .hover\\:bg-accent:hover {
    background-color: var(--accent-color);
  }
  
  .hover\\:text-accent:hover {
    color: var(--accent-color);
  }
  
  .text-accent {
    color: var(--accent-color);
  }
  
  /* Subtle animations */
  footer a {
    transition: all 0.3s ease;
  }
  
  /* Social media icons hover effect */
  footer .w-10 {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  footer .w-10:hover {
    transform: translateY(-2px);
  }
</style>