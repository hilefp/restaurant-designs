---
import MenuNav from './MenuNav.astro';
import { templates } from '../../config/templates';

export interface Props {
  isPage?: boolean;
}

const navItems = templates['papariccos'].navItems;
const reservationText = templates['papariccos'].reservationText;
const reservationLink = templates['papariccos'].reservationLink;
const brandName = templates['papariccos'].brandName;

const { isPage = true } = Astro.props;

const hoursData = templates['papariccos'].hoursData;
---

<section class={`${isPage ? 'pb-16 px-6 md:px-12 bg-primary-color h-auto w-full' : 'py-16 px-6 md:px-12 bg-primary-color h-screen w-full'}`}>
  <!-- Navigation -->
  {isPage && (
    <div class="w-full">
      <MenuNav navItems={navItems} reservationText={reservationText} reservationLink={reservationLink} brandName={brandName} />
    </div>
  )}

  <div class={"max-w-6xl mx-auto" + (isPage ? '' : ' border-t border-white/10 pt-16')}>
    <!-- Contact Header -->
    <div class="text-center mb-12">
      <h2 class="hero-title text-4xl md:text-5xl lg:text-6xl font-bold mb-8 tracking-wider">
        CONTACT
      </h2>
    </div>

    <!-- Contact Content -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 max-w-5xl mx-auto">
      
      <!-- Location & Contact Info -->
      <div class="contact-section">
        <div class="text-center mb-12">
          <h3 class="hero-subtitle text-2xl md:text-3xl font-bold tracking-wider mb-8">
            Location & Hours
          </h3>
        </div>
        
        <!-- Restaurant Info -->
        <div class="space-y-6 mb-8">
          <div class="contact-item">
            <h4 class="hero-title text-xl font-medium tracking-wide mb-3">
              Papa Ricco's Italian Restaurant & Pizzeria
            </h4>
            <div class="hero-description text-lg leading-relaxed space-y-2">
              <p>14415 S. Dixie Highway</p>
              <p>Miami, FL 33178</p>
            </div>
          </div>
          
          <div class="contact-item">
            <div class="hero-description text-lg leading-relaxed">
              <p>(305) 253-6511</p>
            </div>
          </div>
          
          <div class="contact-item">
            <a href="#" class="hero-subtitle text-lg font-medium hover:text-accent transition-colors duration-300">
              Learn more
            </a>
          </div>
        </div>
      </div>

      <!-- Hours of Operation -->
      <div class="contact-section">
        <div class="text-center mb-12">
          <h3 class="hero-subtitle text-2xl md:text-3xl font-bold tracking-wider mb-8">
            Hours of Operation
          </h3>
        </div>
        
        <!-- Hours Grid -->
        <div class="space-y-4 mb-8">
          {hoursData.map((dayInfo) => (
            <div class="hours-item flex justify-between items-center py-3 border-b border-white/10">
              <div class="hero-title text-lg font-medium tracking-wide">
                {dayInfo.day}
              </div>
              <div class={`hero-description text-lg ${dayInfo.hours === 'Closed' ? 'text-red-400' : ''}`}>
                {dayInfo.hours}
              </div>
            </div>
          ))}
        </div>
        
       
      </div>
      
    </div>
  </div>
</section>

<style>
  .contact-section {
    padding: 2rem 0;
  }
  
  .contact-item {
    padding: 1rem 0;
  }
  
  .hours-item:last-child {
    border-bottom: none;
  }
  
  .hero-subtitle:hover {
    color: var(--accent-color);
  }
  
  .text-accent {
    color: var(--accent-color);
  }
  
  .hover\\:text-accent:hover {
    color: var(--accent-color);
  }
</style>